{
  "name": "openpm-bridge",
  "displayName": "OpenPM Bridge",
  "description": "Connects OpenPM to Antigravity IDE for AI-powered task execution",
  "version": "0.0.1",
  "publisher": "openpm",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openpm-bridge.start",
        "title": "OpenPM: Start Bridge Server"
      },
      {
        "command": "openpm-bridge.stop",
        "title": "OpenPM: Stop Bridge Server"
      },
      {
        "command": "openpm-bridge.status",
        "title": "OpenPM: Show Bridge Status"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
